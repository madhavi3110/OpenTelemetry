---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: spirng-petclinic
  labels:
    app: spingpetclinc
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  selector:
    matchLabels:
      app: spingpetclinc
      version: "1.0"
  template:
    metadata:
      labels:
        app: gameoflife
        version: "1.0"
    spec:
      containers:
        - image: priyarani94/springpetclinic:latest
          name: gol-dev
          ports:
            - containerPort: 8080
              protocol: TCP 
---
apiVersion: v1
kind: Service
metadata:
  name: spingpetclinc
spec:
  type: NodePort
  selector:
    app: gameoflife
  ports:
    - targetPort: 8080
      port: 8080
